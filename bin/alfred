#!/usr/bin/php
<?php

require __DIR__ .'/../vendor/autoload.php';

use Alfred\Command\Calendar;
use Alfred\Command\Email;
use Alfred\Command\Account;
use Symfony\Component\Console\Application;

$console = new Application;
$console->setName('Alfred');
$console->setVersion('0.1');

$console->add(new Account\Register());
$console->add(new Account\Show());
$console->add(new Account\SetDefault());
$console->add(new Calendar\Next());
$console->add(new Calendar\Today());
$console->add(new Calendar\Week());
$console->add(new Calendar\Month());
$console->add(new Calendar\Search());
$console->add(new Email\Unread());


$console->run();
